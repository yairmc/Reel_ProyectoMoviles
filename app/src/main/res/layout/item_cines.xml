<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/grisblack"
    android:orientation="vertical">



    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="15dp"
        android:background="@drawable/borde"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal"
            android:background="@color/grisblack">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="match_parent">

                <ImageView
                    android:id="@+id/imagen_cine"
                    android:layout_width="103dp"
                    android:layout_height="139dp"
                    android:layout_margin="15dp"
                    android:layout_weight="1"
                    app:srcCompat="@drawable/cinepolis" />

            </LinearLayout>
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/nombreCine"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:layout_margin="15dp"
                    android:text="Cinépolis Sendero Obregón"
                    android:textSize="15dp"
                    android:textStyle="bold"
                    android:textColor="@color/white"
                    android:fontFamily="@font/littera_regular"/>

                <TextView
                    android:id="@+id/direccion_cine"
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:layout_marginTop="5dp"
                    android:layout_marginLeft="15dp"
                    android:text="Blvd. Rodolfo Elías Calles #1750 85000 Cd. Obregón, Son."
                    android:textColor="@color/white"
                    android:fontFamily="@font/littera_regular"
                    android:textSize="13dp"
                    />

                <TextView
                    android:id="@+id/salas_cines"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="2D, 3D, Sala Junior"
                    android:textColor="@color/white"
                    android:fontFamily="@font/littera_regular"
                    android:layout_marginLeft="15dp"
                    android:textSize="15dp"/>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="2dp"
                    android:orientation="horizontal">


                    <RatingBar
                        android:id="@+id/ratingBar_cines"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_margin="15dp"
                        style="?android:attr/ratingBarStyleSmall"/>

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                        <ImageView
                            android:layout_width="40dp"
                            android:layout_height="40dp"
                            android:layout_marginTop="5dp"
                            android:layout_marginLeft="55dp"
                            android:src="@drawable/ic_menu"/>

                    </LinearLayout>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">


                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Ver Calificaciones"
                            android:layout_marginLeft="15dp"
                            android:textColor="@color/white"
                            android:textSize="15dp"
                            android:fontFamily="@font/littera_regular"
                            android:textStyle="bold"/>

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="Menu"
                            android:layout_marginLeft="35dp"
                            android:textColor="@color/white"/>

                    </LinearLayout>
                </LinearLayout>
            </LinearLayout>
        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/mapa_cine"
                android:layout_width="wrap_content"
                android:layout_height="92dp"
                android:layout_marginLeft="15dp"
                android:layout_marginRight="15dp"
                android:layout_weight="1"
                app:srcCompat="@drawable/mapa1" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Ver Mapa"
                android:layout_margin="10dp"
                android:textColor="@color/white"
                android:fontFamily="@font/littera_regular"
                android:textSize="20dp"
                android:textStyle="bold"
                android:textAlignment="center"/>

        </LinearLayout>
    </LinearLayout>
</LinearLayout>

