<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/grisblack"
    android:orientation="vertical">



    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="15dp"
        android:background="@drawable/borde"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal"
            android:background="@color/grisblack">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="match_parent">

                <ImageView
                    android:id="@+id/imagen_cine"
                    android:layout_width="103dp"
                    android:layout_height="112dp"
                    android:layout_marginTop="5dp"
                    android:layout_marginLeft="13dp"
                    android:layout_weight="1"
                    app:srcCompat="@drawable/cinepolis" />

            </LinearLayout>
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="150dp"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/nombreCine"
                    android:layout_width="156dp"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="5dp"
                    android:layout_marginTop="5dp"
                    android:layout_weight="1"
                    android:fontFamily="@font/littera_regular"
                    android:text="Cinépolis Sendero Obregón"
                    android:textColor="@color/white"
                    android:textSize="15dp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/direccion_cine"
                    android:layout_width="156dp"
                    android:layout_height="46dp"
                    android:layout_marginLeft="5dp"
                    android:layout_marginTop="5dp"
                    android:fontFamily="@font/littera_regular"
                    android:text="Blvd. Rodolfo Elías Calles #1750 85000 Cd. Obregón, Son."
                    android:textColor="@color/white"
                    android:textSize="12dp" />

                <TextView
                    android:id="@+id/salas_cines"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="2D, 3D, Sala Junior"
                    android:layout_marginTop="2dp"
                    android:layout_marginLeft="5dp"
                    android:textColor="@color/white"
                    android:fontFamily="@font/littera_regular"
                    android:textSize="13dp"/>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="2dp"
                    android:orientation="horizontal">


                    <RatingBar
                        android:id="@+id/ratingBar_cines"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="15dp"
                        android:layout_marginTop="5dp"
                        style="?android:attr/ratingBarStyleSmall"/>

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                    </LinearLayout>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">


                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="Ver Calificaciones"
                            android:layout_marginLeft="15dp"
                            android:textColor="@color/white"
                            android:textSize="12dp"
                            android:fontFamily="@font/littera_regular"
                            android:textStyle="bold"/>



                    </LinearLayout>


                </LinearLayout>
            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <ImageView
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:layout_marginTop="55dp"
                    android:src="@drawable/ic_menu" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/littera_regular"
                    android:text="Menu"
                    android:textSize="12dp"
                    android:textColor="@color/white" />

            </LinearLayout>



        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/mapa_cine"
                android:layout_width="wrap_content"
                android:layout_height="89dp"
                android:layout_marginLeft="5dp"
                android:layout_marginRight="5dp"
                android:layout_marginTop="7dp"
                android:layout_weight="1"
                app:srcCompat="@drawable/mapa1" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Ver Mapa"
                android:layout_margin="10dp"
                android:textColor="@color/white"
                android:fontFamily="@font/littera_regular"
                android:textSize="15dp"
                android:textStyle="bold"
                android:textAlignment="center"/>

        </LinearLayout>
    </LinearLayout>
</LinearLayout>

