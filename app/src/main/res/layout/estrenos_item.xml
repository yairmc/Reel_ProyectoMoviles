<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_height="match_parent"
    android:background="@color/grisblack">

    <LinearLayout
        android:layout_width="332dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_margin="20dp"
        android:background="@drawable/borde"
        android:orientation="vertical">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="33dp"
            android:background="@color/color_background"
            android:fontFamily="@font/littera_regular"
            android:paddingLeft="10dp"
            android:text="1 de Abril"
            android:textColor="@color/white"
            android:textSize="20dp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:orientation="vertical">


            <ImageView
                android:id="@+id/img_estreno"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:src="@drawable/dime_cuando_tu" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/titulo_estreno"
                android:layout_width="173dp"
                android:layout_height="wrap_content"
                android:fontFamily="@font/littera_regular"
                android:paddingTop="10dp"
                android:text="En guerra con mi abuelo"
                android:textColor="@color/white"
                android:textSize="15dp" />

            <LinearLayout
                android:layout_width="189dp"
                android:layout_height="match_parent"
                android:orientation="horizontal"
                android:layout_marginTop="8dp"
                android:paddingLeft="10dp">

                <ToggleButton
                    android:id="@+id/button_notification"
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:background="@drawable/toggle_campana"
                    android:textOff=""
                    android:textOn=""
                    android:layout_marginRight="10dp"
                    android:layout_gravity="center"/>

                <ToggleButton
                    android:id="@+id/button_reminder"
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:layout_gravity="center"
                    android:layout_marginRight="10dp"
                    android:textOff=""
                    android:textOn=""
                    android:background="@drawable/toggle_guardar" />

                <Button
                    android:id="@+id/button_info"
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:layout_marginRight="10dp"
                    android:gravity="center"
                    android:background="@drawable/ic_info" />

                <Button
                    android:id="@+id/button_share"
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:gravity="center"
                    android:layout_marginRight="10dp"
                    android:background="@drawable/ic_compartir" />

            </LinearLayout>
        </LinearLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:orientation="vertical">

            <TextView
                android:id="@+id/subTitulo"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/littera_regular"
                android:text="War whit Grandpa"
                android:textColor="@color/white"
                android:textSize="12dp" />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">

                <TextView
                    android:id="@+id/clasificacion"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@color/white"
                    android:fontFamily="@font/littera_regular"
                    android:text="S/C"
                    android:textSize="10dp"
                    android:textColor="@color/black" />

                <TextView
                    android:id="@+id/duracion"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="5dp"
                    android:background="@color/white"
                    android:fontFamily="@font/littera_regular"
                    android:text="94min"
                    android:textSize="10dp"
                    android:textColor="@color/black" />

                <TextView
                    android:id="@+id/categoria"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="5dp"
                    android:background="@color/white"
                    android:fontFamily="@font/littera_regular"
                    android:text="Comedia"
                    android:textSize="10dp"
                    android:textColor="@color/black" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:fontFamily="@font/littera_regular"
                    android:text="Sinopsis"
                    android:textSize="13dp"
                    android:textColor="@color/white" />

                <TextView
                    android:id="@+id/sinopsis"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:fontFamily="@font/littera_regular"
                    android:text="fwerfwergefgwetgerwgdfderwgfwewtbwtb
        rgwergwergwerggwegwetwbbdfndnnwvfenvweljf"
                    android:textColor="@color/white"
                    android:textSize="10dp" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:padding="10dp">
            </LinearLayout>


        </LinearLayout>


    </LinearLayout>



</LinearLayout>