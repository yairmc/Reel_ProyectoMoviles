<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_height="match_parent"
    android:background="@color/cardview_dark_background">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_margin="20dp"
        android:background="@drawable/borde">
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="1 de Abril"
            android:textSize="20dp"
            android:textColor="@color/white"
            android:background="@color/color_background"
            android:paddingLeft="10dp"
            />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            >



            <ImageView
                android:id="@+id/img_estreno"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:src="@drawable/dime_cuando_tu" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp">

            <TextView
                android:id="@+id/titulo_estreno"
                android:layout_width="173dp"
                android:layout_height="wrap_content"
                android:fontFamily="@font/littera_regular"
                android:paddingTop="10dp"
                android:text="En guerra con mi abuelo"
                android:textColor="@color/white"
                android:textSize="15dp" />

            <LinearLayout
                android:layout_width="189dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:orientation="horizontal"
                android:paddingLeft="50dp">

                <Button
                    android:id="@+id/button_notification"
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:layout_marginRight="10dp"
                    android:background="@drawable/ic_notificacion" />

                <Button
                    android:id="@+id/button_reminder"
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:layout_marginRight="10dp"
                    android:background="@drawable/ic_por_ver_off" />

                <Button
                    android:id="@+id/button_info"
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:layout_marginRight="10dp"
                    android:background="@drawable/ic_info" />

                <Button
                    android:id="@+id/button_share"
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:layout_marginRight="10dp"
                    android:background="@drawable/ic_compartir" />

            </LinearLayout>
        </LinearLayout>



        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp">

            <TextView
                android:id="@+id/subTitulo"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/white"
                android:fontFamily="@font/littera_regular"
                android:text="War whit Grandpa"
                android:textSize="15dp"/>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">

                <TextView
                    android:id="@+id/clasificacion"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@color/white"
                    android:textColor="@color/black"
                    android:text="S/C"
                    />
                <TextView
                    android:id="@+id/duracion"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@color/white"
                    android:textColor="@color/black"
                    android:layout_marginLeft="5dp"
                    android:text="94min"
                    />
                <TextView
                    android:id="@+id/categoria"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@color/white"
                    android:textColor="@color/black"
                    android:layout_marginLeft="5dp"
                    android:text="Comedia"
                    />
            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:text="Sinopsis"
                    android:fontFamily="@font/littera_regular"
                    android:textColor="@color/white"/>
                <TextView
                    android:id="@+id/sinopsis"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:fontFamily="@font/littera_regular"
                    android:textSize="10dp"
                    android:text="fwerfwergefgwetgerwgdfderwgfwewtbwtb
        rgwergwergwerggwegwetwbbdfndnnwvfenvweljf"
                    android:textColor="@color/white"/>
            </LinearLayout>


        </LinearLayout>


    </LinearLayout>



</LinearLayout>